<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_cost_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_cost_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_amount"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_cost_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_date"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_cost_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_market_name"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner_cost_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_cost_geo_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_city"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_cost_geo_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_address"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_cost_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_cost_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="@string/add_cheque_photo" />

        <ImageButton
            android:id="@+id/ib_make_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|right"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/icon_no_cheque" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_new_card_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:visibility="invisible" />
</LinearLayout>